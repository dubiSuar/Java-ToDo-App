<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top">

    <!-- Header and Subheader -->
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginStart="24dp"
        android:text="Calendar View"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnBackground" />

    <TextView
        android:id="@+id/subheader_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:text="View your tasks on specific dates"
        android:textSize="18sp"
        android:textColor="?attr/colorOnBackground" />

    <!-- Calendar View for selecting dates -->
    <android.widget.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="294dp" />

    <!-- "No tasks" message -->
    <TextView
        android:id="@+id/textViewNoTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="32dp"
        android:text="No tasks on this date"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="?attr/colorOnBackground"
        android:visibility="gone" />

    <!-- RecyclerView to display tasks for the selected date -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTasks"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:padding="18dp" />
</LinearLayout>
